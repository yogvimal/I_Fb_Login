<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yogi.i_fb_login.Profile_Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Congrats! You have logged in"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/textView" />

    <ImageView
        android:id="@+id/profile_pic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ABC XYZ"
        android:layout_toRightOf="@id/profile_pic"
        android:layout_below="@id/textView"
        android:padding="5dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/profile_name" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GHI, JKLMN"
        android:layout_below="@id/profile_name"
        android:layout_toRightOf="@id/profile_pic"
        android:textSize="15sp"
        android:textStyle="bold"
        android:padding="5dp"
        android:id="@+id/profile_location" />

    <TextView
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="abc.xyz@gmail.com"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_below="@id/profile_location"
        android:layout_toRightOf="@id/profile_pic"
        android:id="@+id/profile_email" />
    <android.support.v7.widget.CardView
        android:id="@+id/fb_logout_card"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:backgroundTint="@android:color/holo_red_light"
        app:cardCornerRadius="6dp"
        android:elevation="3dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">

        <TextView
            android:id="@+id/logout_text"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Facebook Logout"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"/>
        <!--<com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_margin="30dp" />-->
    </android.support.v7.widget.CardView>

</RelativeLayout>
